<div class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button"
        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{ app.request.locale|locale_name(app.request.locale)|u.title }}
    </a>
    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
        
        {% set currentRoute = app.request.get('_route') %}
        {% set routeParams = app.request.get('_route_params') %}
        
        {% set routeParams = routeParams|merge({'_locale': 'en'}) %}
        <li><a class="dropdown-item" href="{{ path(currentRoute, routeParams) }}">English</a></li>
        {% set routeParams = routeParams|merge({'_locale': 'uk'}) %}
        <li><a class="dropdown-item" href="{{ path(currentRoute, routeParams) }}">Українська</a></li>

    </ul>
</div>